{
  "manifest_version": 3,
  "name": "JobTracker",
  "version": "1.0.0",
  "description": "Track job applications across LinkedIn, Indeed, Naukri, and Glassdoor with automatic data scraping",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://www.indeed.com/*",
    "https://www.naukri.com/*",
    "https://www.glassdoor.com/*",
    "https://www.glassdoor.co.in/*",
    "https://www.glassdoor.co.uk/*",
    "https://www.glassdoor.ca/*",
    "http://localhost:3000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/jobtrackerlogo.png",
      "48": "icons/jobtrackerlogo.png",
      "128": "icons/jobtrackerlogo.png"
    }
  },
  "icons": {
    "16": "icons/jobtrackerlogo.png",
    "48": "icons/jobtrackerlogo.png",
    "128": "icons/jobtrackerlogo.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/*",
        "https://www.indeed.com/*",
        "https://www.naukri.com/*",
        "https://www.glassdoor.com/*",
        "https://www.glassdoor.co.in/*",
        "https://www.glassdoor.co.uk/*",
        "https://www.glassdoor.ca/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "http://localhost:3000/*"
      ],
      "js": [
        "auth-sync.js"
      ],
      "run_at": "document_idle"
    }
  ]
}