generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  jobs      Job[]
}

model Job {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  title     String
  company   String
  platform  String?
  location  String?
  salary    String?
  jobUrl    String?
  status    String   @default("applied")
  
  // Recruiter Info
  hrName    String?
  hrEmail   String?
  hrPhone   String?
  
  notes     String?
  jobId     String?  // Platform specific ID
  interviewDate DateTime?
  contactMethod String?
  feedback      String?
  scrapedAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
